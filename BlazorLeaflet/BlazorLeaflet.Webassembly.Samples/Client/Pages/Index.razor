@page "/"

@using System.Drawing
@using BlazorLeaflet.Models
@using BlazorLeaflet.Models.Events
@inject IJSRuntime jsRuntime

<h1>Blazor Leaflet </h1>

<h3>Drag &amp; drop the Marker!</h3>

<div class="form-inline m-2">
    <div class="form-group mb-2">
        <label>Lat </label>
        <input class="form-control ml-2 mr-2" placeholder="city name" @bind="Lat" disabled />
    </div>

    <div class="form-group mb-2">
        <label>Lng </label>
        <input class="form-control ml-2 mr-2" placeholder="city name" @bind="Lng" disabled />
    </div>
</div>

<div class="content-row">
    <div style="height: 500px; width: 500px;">
        <LeafletMap Map="_map" InitialPosition="_startAt" InitialZoom="4.8f" />
    </div>

    <DemoLogger @ref="Logger" />
</div>

@code
{
    private DemoLogger Logger;

    private Map _map;

    protected override void OnInitialized()
    {
        _startAt = new PointF(Lat, Lng);

        _map = new Map(jsRuntime);

        _map.Layers.Add(new TileLayer
        {
            UrlTemplate = "https://a.tile.openstreetmap.org/{z}/{x}/{y}.png",
            Attribution = "&copy; <a href=\"https://www.openstreetmap.org/copyright\">OpenStreetMap</a> contributors",
        });

        var marker = new Marker(_startAt)
        {
            Draggable = true,
            Title = "Marker 1"
        };

        marker.OnAdd += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnAdd)}");
        marker.OnClick += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnClick)}");
        marker.OnContextMenu += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnContextMenu)}");
        marker.OnDblClick += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnDblClick)}");
        marker.OnDrag += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnDrag)}");
        marker.OnDragEnd += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnDragEnd)}");
        marker.OnDragStart += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnDragStart)}");
        marker.OnMouseDown += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnMouseDown)}");
        marker.OnMouseOut += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnMouseOut)}");
        marker.OnMouseOver += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnMouseOver)}");
        marker.OnMouseUp += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnMouseUp)}");
        marker.OnMove += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnMove)}");
        marker.OnMoveEnd += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnMoveEnd)}");
        marker.OnMoveStart += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnMoveStart)}");
        marker.OnRemove += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnRemove)}");
        marker.OnPopupClose += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnPopupClose)}");
        marker.OnPopupOpen += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnPopupOpen)}");
        marker.OnTooltipClose += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnTooltipClose)}");
        marker.OnTooltipOpen += (s, e) => Logger.Log($"{nameof(Marker)}.{nameof(Marker.OnTooltipOpen)}");

        marker.OnMove += OnDrag;

        _map.Layers.Add(marker);
    }

    private void OnDrag(Marker marker, DragEvent evt)
    {
        Lat = (float)evt.LatLng.Lat;
        Lng = (float)evt.LatLng.Lng;
        StateHasChanged();
    }

    private float Lat { get; set; } = 47.5574007f;

    private float Lng { get; set; } = 16.3918687f;

    private PointF _startAt;

}